<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report ID: "
            android:textStyle="bold"
            android:id="@+id/reportidlabel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reportid"
            android:text="stuff"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reportidlabel"
            android:text="Submitter: "
            android:textStyle="bold"
            android:id="@+id/submitterlabel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/submitter"
            android:text="stuff"
            android:layout_below="@+id/reportid"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/submitterlabel"
            android:text="Location: "
            android:textStyle="bold"
            android:id="@+id/locationlabel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="stuff"
            android:id="@+id/location"
            android:layout_below="@+id/submitter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationlabel"
            android:text="Overall Condition: "
            android:textStyle="bold"
            android:id="@+id/conditionlabel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/condition"
            android:layout_below="@+id/location"
            android:text="stuff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conditionlabel"
            android:text="Virus PPM: "
            android:textStyle="bold"
            android:id="@+id/viruslabel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/virus"
            android:layout_below="@+id/condition"
            android:text="stuff" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viruslabel"
        android:text="Contaminant PPM: "
        android:textStyle="bold"
        android:id="@+id/contaminantlabel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/contaminant"
            android:layout_below="@+id/virus"
            android:text="stuff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contaminantlabel"
            android:text="Date: "
            android:textStyle="bold"
            android:id="@+id/datelabel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/date"
            android:layout_below="@+id/contaminant"
            android:text="stuff" />
    </RelativeLayout>

    </android.support.v7.widget.CardView>