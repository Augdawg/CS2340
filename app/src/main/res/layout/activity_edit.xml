<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:hint="@string/activity_edit_name_hint"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:hint="@string/activity_edit_email_hint"
        android:layout_below="@+id/name"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/home_address"
        android:layout_below="@+id/email"
        android:hint="@string/activity_edit_home_hint"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:layout_below="@+id/home_address"
        android:hint="@string/activity_edit_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_edit_name"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/activity_edit_email"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/email" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/home_colon"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/home_address"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/title_colon"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_registration_account_type"
        android:layout_below="@+id/title"
        android:textSize="20sp"
        android:id="@+id/acc_type_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acc_type"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/acc_type_text"
        android:layout_toEndOf="@+id/acc_type_text"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:onClick="savePressed"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/acc_type"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"/>

</RelativeLayout>