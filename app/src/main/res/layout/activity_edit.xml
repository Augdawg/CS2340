<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/email"
        android:hint="Email Address"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/homeaddress"
        android:layout_below="@+id/email"
        android:hint="Home Address"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:layout_below="@+id/homeaddress"
        android:hint="Title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Email:"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/email"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Home:"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/homeaddress"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Title:"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Type: "
        android:layout_below="@+id/title"
        android:textSize="20dp"
        android:id="@+id/acctypetext"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acctype"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/acctypetext"
        android:textSize="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="savePressed"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/acctype"
        android:layout_alignLeft="@+id/title"/>

</RelativeLayout>